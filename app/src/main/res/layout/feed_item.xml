<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_feed_item_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_feed_item_title"
        android:layout_marginTop="2dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_feed_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_feed_item_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:text=""
        android:maxLines="1"
        android:maxEms="20"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#222"/>

    <TextView
        android:id="@+id/tv_feed_item_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_feed_item_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_feed_item_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text=""
        android:textSize="12sp"
        android:maxLines="5"
        android:textColor="#444"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_feed_item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_feed_item_title"
        app:layout_constraintBottom_toTopOf="@id/tv_feed_item_note"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="12dp"
        android:background="#999"
        android:alpha="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>