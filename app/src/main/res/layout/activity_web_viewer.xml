<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewer.WebViewer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navBarHeight"
        android:background="@color/darkWhite"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_viewr_back"
            android:layout_width="@dimen/navBarHeight"
            android:layout_height="@dimen/navBarHeight"
            android:layout_marginStart="6dp"
            android:src="@mipmap/webviewer_back"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tv_view_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="marquee"
            android:textSize="18sp"
            android:textColor="@color/pureBlack"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/iv_viewr_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/webviewer_share"
            android:padding="8dp"/>
    </LinearLayout>

    <WebView
        android:id="@+id/url_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>