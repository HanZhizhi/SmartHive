<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_hive_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/hive_item_icon" />

        <TextView
            android:id="@+id/tv_hive_item_device_name_"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_hive_item_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:clickable="false"
            android:text="蜂箱名称："
            android:textColor="#aa000000"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_hive_item_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:clickable="false"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_hive_item_device_name_"
            app:layout_constraintTop_toTopOf="@id/tv_hive_item_device_name_"
            app:layout_constraintBottom_toBottomOf="@id/tv_hive_item_device_name_"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_hi_item_ad_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:layout_constraintLeft_toRightOf="@+id/iv_hive_item_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_hive_item_device_name_"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text="蜂箱状态："
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_hive_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:clickable="false"
            app:layout_constraintLeft_toRightOf="@+id/tv_hi_item_ad_"
            app:layout_constraintTop_toTopOf="@id/tv_hi_item_ad_"
            app:layout_constraintBottom_toBottomOf="@id/tv_hi_item_ad_"
            android:layout_marginStart="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
